<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.github.cstroe.spendhawk.entity">
    <class name="Category" table="CATEGORIES">
        <id name="id" column="CATEGORY_ID">
            <generator class="native"/>
        </id>

        <!-- properties declared using Hibernate mapping types -->
        <property name="name"     type="string"    column="NAME"      not-null="true"/>
        <many-to-one name="user" column="USER_ID" not-null="true"/>
        <many-to-one name="parent" column="PARENT_ID" class="Category" not-null="false"/>
        <set name="children" table="CATEGORIES" lazy="false" inverse="false">
            <key column="PARENT_ID"/>
            <one-to-many class="Category"/>
        </set>
    </class>
</hibernate-mapping>