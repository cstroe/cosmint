<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.github.cstroe.spendhawk.entity">
    <class name="Account" table="ACCOUNTS">
        <id name="id" column="ACCOUNT_ID">
            <generator class="native"/>
        </id>

        <!-- properties declared using Hibernate mapping types -->
        <property name="name" type="string" column="NAME"/>
        <many-to-one name="user" column="USER_ID" not-null="true"/>
        <set name="transactions" inverse="true">
            <key column="ACCOUNT_ID"/>
            <one-to-many class="Transaction"/>
        </set>
        <many-to-one name="parent" column="PARENT_ID" class="Account" not-null="false"/>
        <set name="subAccounts" table="ACCOUNTS" lazy="false" inverse="false">
            <key column="PARENT_ID"/>
            <one-to-many class="Account"/>
        </set>
    </class>
</hibernate-mapping>