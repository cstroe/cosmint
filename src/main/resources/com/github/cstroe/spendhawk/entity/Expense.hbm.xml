<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.github.cstroe.spendhawk.entity">
    <class name="Expense" table="EXPENSES">
        <id name="id" column="EXPENSE_ID">
            <generator class="native"/>
        </id>

        <!-- properties declared using Hibernate mapping types -->
        <property name="amount"     type="double"    column="AMOUNT"      not-null="true"/>
        <property name="merchant"   type="string"    column="MERCHANT"/>
        <many-to-one name="category" column="CATEGORY_ID" not-null="true"/>
        <many-to-one name="transaction" column="TRANSACTION_ID" not-null="true"/>
    </class>
</hibernate-mapping>