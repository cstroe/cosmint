<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.github.cstroe.spendhawk.entity">
    <class name="CashFlow" table="CASHFLOWS">
        <id name="id" column="CASHFLOW_ID">
            <generator class="native"/>
        </id>

        <!-- properties declared using Hibernate mapping types -->
        <property name="amount"     type="double"    column="AMOUNT"      not-null="true"/>
        <many-to-one name="transaction" column="TRANSACTION_ID" class="Transaction" not-null="true"/>
        <many-to-one name="account" column="ACCOUNT_ID" class="Account" not-null="true"/>
    </class>
</hibernate-mapping>